<h1 class="form-title">今日はどんな1日だった？</h1>

<div class="diary-form-wrapper">
  <%= form_with(model: diary_entry, local: true) do |form| %>
    <% if diary_entry.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(diary_entry.errors.count, "件のエラー") %>があります:</h3>
        <ul>
          <% diary_entry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :date, '日付' %>
      <%= form.date_field :date, class: 'form-input' %>
    </div>

    <fieldset class="form-section">
      <legend>今日の良かったこと3つ</legend>

      <div class="form-group">
        <%= form.label :positive_point1, 'Good 1' %>
        <%= form.text_area :positive_point1, rows: 3, class: 'form-textarea' %>
      </div>

      <div class="form-group">
        <%= form.label :positive_point2, 'Good 2' %>
        <%= form.text_area :positive_point2, rows: 3, class: 'form-textarea' %>
      </div>

      <div class="form-group">
        <%= form.label :positive_point3, 'Good 3' %>
        <%= form.text_area :positive_point3, rows: 3, class: 'form-textarea' %>
      </div>
    </fieldset>

    <div class="form-group">
      <%= form.label :reflection_point, '反省点' %>
      <%= form.text_area :reflection_point, rows: 4, class: 'form-textarea' %>
    </div>

    <div class="form-group">
      <%= form.label :memo, 'メモ' %>
      <%= form.text_area :memo, rows: 5, class: 'form-textarea' %>
    </div>

    <div class="form-actions">
      <%= form.submit '保存する', class: 'submit-button' %>
    </div>
  <% end %>
</div>
